<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Payment option</th>
      <th>Tufts dept</th>
      <th>Tufts grant</th>
      <th>Tmc cost center</th>
      <th>Tmc dept</th>
      <th>Tmc box</th>
      <th>Company name</th>
      <th>Po</th>
      <th>Credit card no</th>
      <th>Credit card exp</th>
      <th>Credit card cvvs</th>
      <th>Shipping address</th>
      <th>Billing address</th>
      <th>Tucf startup no</th>
      <th>Tucf startup code</th>
      <th>Tucf cycle no</th>
      <th>Tucf cycle code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user_id %></td>
        <td><%= order.payment_option %></td>
        <td><%= order.tufts_dept_id %></td>
        <td><%= order.tufts_grant %></td>
        <td><%= order.tmc_cost_center %></td>
        <td><%= order.tmc_dept %></td>
        <td><%= order.tmc_box %></td>
        <td><%= order.company_name %></td>
        <td><%= order.po %></td>
        <td><%= order.credit_card_no %></td>
        <td><%= order.credit_card_exp %></td>
        <td><%= order.credit_card_cvvs %></td>
        <td><%= order.shipping_address %></td>
        <td><%= order.billing_address %></td>
        <td><%= order.tucf_startup_no %></td>
        <td><%= order.tucf_startup_code %></td>
        <td><%= order.tucf_cycle_no %></td>
        <td><%= order.tucf_cycle_code %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

